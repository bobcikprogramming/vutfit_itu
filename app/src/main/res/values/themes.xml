<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GenerátorHesla" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/navBarSelect</item>
        <item name="colorPrimaryVariant">@color/navBarBackground</item>
        <item name="colorOnPrimary">@color/navBarBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/button</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="TabbarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TabbarTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/tabbarTextView</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TabbarLine">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/tabbarLine</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="MyUnderline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/underline</item>
    </style>

    <style name="MyUnderlineSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/underlineSwitch</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>--
    </style>

    <style name="MySwitch" parent="Theme.AppCompat">
        <item name="colorAccent">@color/switchOn</item>
        <item name="colorSwitchThumbNormal">@color/switchOff</item>
    </style>

    <!-- https://stackoverflow.com/a/42373688 -->
    <style name="MyDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyDialogButtonStyle</item>
    </style>

    <style name="MyDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/description</item>
    </style>
    <style name="Theme.GenerátorHesla.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GenerátorHesla.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GenerátorHesla.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Edit text pro vyhledávání -->

    <style name="SearchTopLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SearchInsideLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="SearchEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:hint">Název vzoru</item>
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SearchImageView">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SearchImageViewLeft" parent="SearchImageView">
        <item name="android:src">@drawable/ic_search</item>
    </style>

    <style name="SearchImageViewRight" parent="SearchImageView">
        <item name="android:src">@drawable/avd_delete</item>
    </style>

    <!-- Edit text pro vyhledávání -->

    <!-- New manual pattern -->

    <style name="TextViewOptionHeadline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/description</item>
    </style>

    <style name="LayoutOptionButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="OptionButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/notSelected</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TabBarLineOptions" parent="TabbarLine">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="LayoutOptionSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LayoutOptionSettingInfo">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="infoButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:src">@drawable/ic_info</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="RadioGroupOptionSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="RadioButtonOptionSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- New manual pattern -->

    <!-- Password -->

    <style name="LayoutPassword">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ImageLock">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:src">@drawable/ic_lock</item>
    </style>

    <style name="EditTextPassword">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">text|textPassword</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ShowHidePassword">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:src">@drawable/ic_invisible</item>
    </style>

    <style name="ButtonAccountAction">
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/mainBackground</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PasswordHeadline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
    </style>

    <style name="GoTo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/description</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Password -->

    <style name="MySwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ImageButtons">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="NavbarHeadline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

</resources>