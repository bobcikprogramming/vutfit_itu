<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FragmentManualPattern"
    android:orientation="vertical"
    android:background="@color/mainBackground"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:weightSum="10"
    android:id="@+id/layoutBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:minHeight="80dp"
                android:layout_weight="2.5"
                android:orientation="vertical"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="@string/finalPassword"
                    android:textSize="15sp"
                    android:textColor="@color/description"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/layoutPassword">

                    <ScrollView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:fillViewport="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/layoutPasswordScroll">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvPassword"
                                android:textColor="@color/white"
                                android:textSize="22sp"
                                android:paddingBottom="5dp"/>

                        </LinearLayout>

                    </ScrollView>

                    <ImageView
                        style="@style/ImageButtons"
                        android:id="@+id/btnCopy"
                        android:src="@drawable/avd_copy"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/MyUnderline"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.35"
                android:minHeight="75dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="@string/phrase"
                    android:textSize="15sp"
                    android:textColor="@color/description"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/etPhrase"
                        android:hint="@string/phraseHint"
                        android:textColorHint="@color/lightGray"
                        android:textColor="@color/white"
                        android:background="@null"/>

                    <ImageView
                        style="@style/ImageButtons"
                        android:layout_height="match_parent"
                        android:id="@+id/btnDelete"
                        android:src="@drawable/avd_delete"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/MyUnderline"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layoutPattern"
                    android:visibility="visible"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:minHeight="80dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.6"
                                android:text="@string/everyFirst"
                                android:textColor="@color/description"
                                android:textSize="20sp"
                                android:gravity="center_vertical"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/tvFirstOption"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:gravity="center_vertical|end"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/tvFirstOptionSetting"
                                android:textColor="@color/lightGray"
                                android:textSize="16sp"
                                android:paddingStart="10dp"
                                android:gravity="center_vertical"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/MyUnderline"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:minHeight="80dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.6"
                                android:text="@string/everySecond"
                                android:textColor="@color/description"
                                android:textSize="20sp"
                                android:gravity="center_vertical"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/tvSecondOption"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:gravity="center_vertical|end"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/tvSecondOptionSetting"
                                android:textColor="@color/lightGray"
                                android:textSize="16sp"
                                android:paddingStart="10dp"
                                android:gravity="center_vertical"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/MyUnderline"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:minHeight="80dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.6"
                                android:text="@string/everyThird"
                                android:textColor="@color/description"
                                android:textSize="20sp"
                                android:gravity="center_vertical"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/tvThirdOption"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:gravity="center_vertical|end"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/tvThirdOptionSetting"
                                android:textColor="@color/lightGray"
                                android:textSize="16sp"
                                android:paddingStart="10dp"
                                android:gravity="center_vertical"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="160dp"
                    android:orientation="vertical"
                    android:id="@+id/layoutEmptyPattern"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/patternDoesntExist"
                        android:textSize="22sp"
                        android:textColor="@color/lightGray"
                        android:gravity="center_horizontal|bottom"
                        android:layout_marginBottom="5dp"/>

                    <LinearLayout
                        style="@style/MyUnderline"
                        android:id="@+id/underlineEmptyPattern"
                        android:layout_marginStart="35dp"
                        android:layout_marginEnd="35dp"
                        android:orientation="horizontal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/clickHereForNewPattern"
                        android:textSize="17sp"
                        android:textColor="@color/description"
                        android:gravity="center_horizontal|top"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/MyUnderline"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.35"
                android:minHeight="75dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/patternExample"
                        android:textColor="@color/description"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/tvPattern"
                        android:layout_weight="1"
                        android:textColor="@color/lightGray"
                        android:text="@string/emptyPattern"
                        android:textSize="25sp"
                        android:gravity="center_vertical"/>

                    <ImageView
                        style="@style/ImageButtons"
                        android:layout_height="match_parent"
                        android:id="@+id/btnNewManualPattern"
                        android:layout_gravity="bottom"
                        android:src="@drawable/ic_edit"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>