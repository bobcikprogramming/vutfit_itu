<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PatternList"
    android:orientation="vertical"
    android:background="@color/mainBackground"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnHelp"
            android:src="@drawable/ic_help"
            android:padding="5dp"
            android:visibility="visible"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnCancel"
            android:src="@drawable/ic_cancel"
            android:padding="5dp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Seznam vzorÅ¯"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="45dp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnAccSetting"
            android:src="@drawable/ic_acc_setting"
            android:padding="5dp"
            android:layout_marginStart="5dp"
            android:visibility="visible"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnLogout"
            android:src="@drawable/ic_logout"
            android:padding="5dp"
            android:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
        style="@style/SearchTopLinearLayout">
        <LinearLayout
            style="@style/SearchInsideLinearLayout">

            <ImageView
                style="@style/SearchImageViewLeft"/>

            <EditText
                style="@style/SearchEditText"
                android:id="@+id/etSearch"/>

            <ImageView
                style="@style/SearchImageViewRight"
                android:id="@+id/btnDelete"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/recyclerView"/>

</LinearLayout>